                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
            </div>
            <div>
                <h1 class="mb-2 bg-gradient-to-r from-blue-600 via-purple-600 to-indigo-600 bg-clip-text text-3xl font-bold text-transparent">Settings</h1>
                <p class="text-xl text-gray-600 dark:text-gray-300">Manage your account preferences and application settings</p>
            </div>
        </div>
    </div>

    <!-- Settings Tabs -->
    <div class="overflow-hidden rounded-3xl border border-gray-200/50 bg-white/80 shadow-xl backdrop-blur-xl dark:border-gray-700/50 dark:bg-gray-800/80">
        <div class="border-b border-gray-200 dark:border-gray-700">
            <nav class="flex">
                <button @onclick="@(() => SetActiveTab("general"))" class="@GetTabClass("general")">
                    <svg class="mx-auto mb-1 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
