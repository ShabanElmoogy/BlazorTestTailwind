@page "/settings"

<PageTitle>Settings</PageTitle>

<div class="animate-in fade-in space-y-8 duration-700">
    <!-- Settings Header -->
    <div class="rounded-3xl border border-gray-200/50 bg-gradient-to-br from-blue-50 via-white to-purple-50 p-8 shadow-xl dark:border-gray-700/50 dark:from-gray-800 dark:via-gray-900 dark:to-purple-900/20">
        <div class="flex items-center space-x-6">
            <div class="flex h-16 w-16 items-center justify-center rounded-2xl bg-gradient-to-br from-blue-400 via-purple-500 to-indigo-600 shadow-2xl">
