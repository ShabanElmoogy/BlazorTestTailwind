@page "/profile"

<PageTitle>Profile</PageTitle>

<div class="animate-in fade-in space-y-8 duration-700">
    <!-- Profile Header -->
    <div class="rounded-3xl border border-gray-200/50 bg-gradient-to-br from-blue-50 via-white to-purple-50 p-8 shadow-xl dark:border-gray-700/50 dark:from-gray-800 dark:via-gray-900 dark:to-purple-900/20">
        <div class="flex items-center space-x-6">
            <div class="flex h-24 w-24 items-center justify-center rounded-full bg-gradient-to-br from-blue-400 via-purple-500 to-indigo-600 shadow-2xl">
                <svg class="h-12 w-12 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                </svg>
            </div>
            <div>
                <h1 class="mb-2 bg-gradient-to-r from-blue-600 via-purple-600 to-indigo-600 bg-clip-text text-3xl font-bold text-transparent">John Doe</h1>
                <p class="text-xl text-gray-600 dark:text-gray-300">johndoe@example.com</p>
                <p class="mt-2 text-gray-500 dark:text-gray-400">Software Developer</p>
            </div>
        </div>
    </div>

    <!-- Tabs Navigation -->
    <div class="overflow-hidden rounded-3xl border border-gray-200/50 bg-white/80 shadow-xl backdrop-blur-xl dark:border-gray-700/50 dark:bg-gray-800/80">
        <div class="border-b border-gray-200 dark:border-gray-700">
            <nav class="flex">
                <button @onclick="@(() => SetActiveTab("overview"))" class="@GetTabClass("overview")">
                    <svg class="mx-auto mb-1 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
                    </svg>
                    Overview
                </button>
                <button @onclick="@(() => SetActiveTab("personal"))" class="@GetTabClass("personal")">
                    <svg class="mx-auto mb-1 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                    </svg>
                    Personal Info
                </button>
                <button @onclick="@(() => SetActiveTab("account"))" class="@GetTabClass("account")">
                    <svg class="mx-auto mb-1 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                    </svg>
                    Account
                </button>
                <button @onclick="@(() => SetActiveTab("skills"))" class="@GetTabClass("skills")">
                    <svg class="mx-auto mb-1 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
                    </svg>
                    Skills
                </button>
            </nav>
        </div>

        <!-- Tab Content -->
        <div class="p-8">
            @if (activeTab == "overview")
            {
                <!-- Overview Tab -->
                <div class="space-y-8">
                    <!-- Bio Section -->
                    <div>
                        <h3 class="mb-6 text-2xl font-bold text-gray-900 dark:text-white">About Me</h3>
                        <p class="leading-relaxed text-gray-700 dark:text-gray-300">
                            Passionate software developer with over 5 years of experience in web development. I love creating beautiful and functional user interfaces using modern technologies like Blazor and Tailwind CSS. When I'm not coding, you can find me exploring new technologies or contributing to open-source projects.
                        </p>
                    </div>

                    <!-- Quick Stats -->
                    <div class="grid grid-cols-1 gap-6 md:grid-cols-3">
                        <div class="rounded-2xl bg-gradient-to-br from-blue-500 to-blue-600 p-6 text-white">
                            <div class="flex items-center justify-between">
                                <div>
                                    <p class="text-sm text-blue-100">Projects</p>
                                    <p class="text-2xl font-bold">24</p>
                                </div>
                                <svg class="h-8 w-8 text-blue-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
                                </svg>
                            </div>
                        </div>
                        <div class="rounded-2xl bg-gradient-to-br from-green-500 to-green-600 p-6 text-white">
                            <div class="flex items-center justify-between">
                                <div>
                                    <p class="text-sm text-green-100">Experience</p>
                                    <p class="text-2xl font-bold">5+</p>
                                </div>
                                <svg class="h-8 w-8 text-green-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                </svg>
                            </div>
                        </div>
                        <div class="rounded-2xl bg-gradient-to-br from-purple-500 to-purple-600 p-6 text-white">
                            <div class="flex items-center justify-between">
                                <div>
                                    <p class="text-sm text-purple-100">Certifications</p>
                                    <p class="text-2xl font-bold">8</p>
                                </div>
                                <svg class="h-8 w-8 text-purple-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z"></path>
                                </svg>
                            </div>
                        </div>
                    </div>
                </div>
            }
            else if (activeTab == "personal")
            {
                <!-- Personal Info Tab -->
                <div class="space-y-6">
                    <h3 class="mb-6 text-2xl font-bold text-gray-900 dark:text-white">Personal Information</h3>
                    <div class="grid grid-cols-1 gap-6 md:grid-cols-2">
                        <div>
                            <label class="mb-2 block text-sm font-medium text-gray-700 dark:text-gray-300">Full Name</label>
                            <p class="text-lg text-gray-900 dark:text-white">John Doe</p>
                        </div>
                        <div>
                            <label class="mb-2 block text-sm font-medium text-gray-700 dark:text-gray-300">Email</label>
                            <p class="text-lg text-gray-900 dark:text-white">johndoe@example.com</p>
                        </div>
                        <div>
                            <label class="mb-2 block text-sm font-medium text-gray-700 dark:text-gray-300">Phone</label>
                            <p class="text-lg text-gray-900 dark:text-white">+1 (555) 123-4567</p>
                        </div>
                        <div>
                            <label class="mb-2 block text-sm font-medium text-gray-700 dark:text-gray-300">Location</label>
                            <p class="text-lg text-gray-900 dark:text-white">New York, USA</p>
                        </div>
                        <div>
                            <label class="mb-2 block text-sm font-medium text-gray-700 dark:text-gray-300">Date of Birth</label>
                            <p class="text-lg text-gray-900 dark:text-white">January 15, 1990</p>
                        </div>
                        <div>
                            <label class="mb-2 block text-sm font-medium text-gray-700 dark:text-gray-300">Nationality</label>
                            <p class="text-lg text-gray-900 dark:text-white">American</p>
                        </div>
                    </div>
                </div>
            }
            else if (activeTab == "account")
            {
                <!-- Account Tab -->
                <div class="space-y-6">
                    <h3 class="mb-6 text-2xl font-bold text-gray-900 dark:text-white">Account Settings</h3>
                    <div class="grid grid-cols-1 gap-6 md:grid-cols-2">
                        <div>
                            <label class="mb-2 block text-sm font-medium text-gray-700 dark:text-gray-300">Username</label>
                            <p class="text-lg text-gray-900 dark:text-white">johndoe</p>
                        </div>
                        <div>
                            <label class="mb-2 block text-sm font-medium text-gray-700 dark:text-gray-300">Member Since</label>
                            <p class="text-lg text-gray-900 dark:text-white">January 2023</p>
                        </div>
                        <div>
                            <label class="mb-2 block text-sm font-medium text-gray-700 dark:text-gray-300">Last Login</label>
                            <p class="text-lg text-gray-900 dark:text-white">@LastLoginTime</p>
                        </div>
                        <div>
                            <label class="mb-2 block text-sm font-medium text-gray-700 dark:text-gray-300">Account Status</label>
                            <span class="inline-flex items-center rounded-full bg-green-100 px-3 py-1 text-sm font-medium text-green-800 dark:bg-green-900 dark:text-green-200">
                                <svg class="mr-1 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                </svg>
                                Active
                            </span>
                        </div>
                        <div>
                            <label class="mb-2 block text-sm font-medium text-gray-700 dark:text-gray-300">Two-Factor Authentication</label>
                            <span class="inline-flex items-center rounded-full bg-blue-100 px-3 py-1 text-sm font-medium text-blue-800 dark:bg-blue-900 dark:text-blue-200">
                                <svg class="mr-1 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
                                </svg>
                                Enabled
                            </span>
                        </div>
                        <div>
                            <label class="mb-2 block text-sm font-medium text-gray-700 dark:text-gray-300">Email Notifications</label>
                            <span class="inline-flex items-center rounded-full bg-green-100 px-3 py-1 text-sm font-medium text-green-800 dark:bg-green-900 dark:text-green-200">
                                <svg class="mr-1 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                                </svg>
                                Active
                            </span>
                        </div>
                    </div>
                </div>
            }
            else if (activeTab == "skills")
            {
                <!-- Skills Tab -->
                <div class="space-y-6">
                    <h3 class="mb-6 text-2xl font-bold text-gray-900 dark:text-white">Skills & Expertise</h3>

                    <!-- Technical Skills -->
                    <div>
                        <h4 class="mb-4 text-lg font-semibold text-gray-900 dark:text-white">Technical Skills</h4>
                        <div class="grid grid-cols-2 gap-3 md:grid-cols-3 lg:grid-cols-4">
                            <span class="rounded-xl bg-blue-100 px-4 py-2 text-center text-sm font-medium text-blue-800 dark:bg-blue-900 dark:text-blue-200">C#</span>
                            <span class="rounded-xl bg-green-100 px-4 py-2 text-center text-sm font-medium text-green-800 dark:bg-green-900 dark:text-green-200">Blazor</span>
                            <span class="rounded-xl bg-purple-100 px-4 py-2 text-center text-sm font-medium text-purple-800 dark:bg-purple-900 dark:text-purple-200">Tailwind CSS</span>
                            <span class="rounded-xl bg-orange-100 px-4 py-2 text-center text-sm font-medium text-orange-800 dark:bg-orange-900 dark:text-orange-200">JavaScript</span>
                            <span class="rounded-xl bg-red-100 px-4 py-2 text-center text-sm font-medium text-red-800 dark:bg-red-900 dark:text-red-200">React</span>
                            <span class="rounded-xl bg-indigo-100 px-4 py-2 text-center text-sm font-medium text-indigo-800 dark:bg-indigo-900 dark:text-indigo-200">.NET</span>
                            <span class="rounded-xl bg-yellow-100 px-4 py-2 text-center text-sm font-medium text-yellow-800 dark:bg-yellow-900 dark:text-yellow-200">SQL</span>
                            <span class="rounded-xl bg-pink-100 px-4 py-2 text-center text-sm font-medium text-pink-800 dark:bg-pink-900 dark:text-pink-200">Git</span>
                        </div>
                    </div>

                    <!-- Soft Skills -->
                    <div>
                        <h4 class="mb-4 text-lg font-semibold text-gray-900 dark:text-white">Soft Skills</h4>
                        <div class="grid grid-cols-2 gap-3 md:grid-cols-3 lg:grid-cols-4">
                            <span class="rounded-xl bg-gray-100 px-4 py-2 text-center text-sm font-medium text-gray-800 dark:bg-gray-700 dark:text-gray-200">Problem Solving</span>
                            <span class="rounded-xl bg-gray-100 px-4 py-2 text-center text-sm font-medium text-gray-800 dark:bg-gray-700 dark:text-gray-200">Team Collaboration</span>
                            <span class="rounded-xl bg-gray-100 px-4 py-2 text-center text-sm font-medium text-gray-800 dark:bg-gray-700 dark:text-gray-200">Communication</span>
                            <span class="rounded-xl bg-gray-100 px-4 py-2 text-center text-sm font-medium text-gray-800 dark:bg-gray-700 dark:text-gray-200">Leadership</span>
                        </div>
                    </div>

                    <!-- Experience Level -->
                    <div>
                        <h4 class="mb-4 text-lg font-semibold text-gray-900 dark:text-white">Experience Level</h4>
                        <div class="space-y-3">
                            <div>
                                <div class="mb-1 flex justify-between text-sm">
                                    <span class="text-gray-700 dark:text-gray-300">Frontend Development</span>
                                    <span class="text-gray-700 dark:text-gray-300">Expert</span>
                                </div>
                                <div class="h-2 w-full rounded-full bg-gray-200 dark:bg-gray-700">
                                    <div class="h-2 rounded-full bg-blue-600" style="width: 90%"></div>
                                </div>
                            </div>
                            <div>
                                <div class="mb-1 flex justify-between text-sm">
                                    <span class="text-gray-700 dark:text-gray-300">Backend Development</span>
                                    <span class="text-gray-700 dark:text-gray-300">Advanced</span>
                                </div>
                                <div class="h-2 w-full rounded-full bg-gray-200 dark:bg-gray-700">
                                    <div class="h-2 rounded-full bg-green-600" style="width: 80%"></div>
                                </div>
                            </div>
                            <div>
                                <div class="mb-1 flex justify-between text-sm">
                                    <span class="text-gray-700 dark:text-gray-300">Database Design</span>
                                    <span class="text-gray-700 dark:text-gray-300">Intermediate</span>
                                </div>
                                <div class="h-2 w-full rounded-full bg-gray-200 dark:bg-gray-700">
                                    <div class="h-2 rounded-full bg-purple-600" style="width: 70%"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@code {
    private string activeTab = "overview";

    private string LastLoginTime => DateTime.Now.ToString("MMMM dd, yyyy at hh:mm tt");

    private string GetTabClass(string tabName)
    {
        string baseClasses = "flex-1 py-4 px-6 text-center font-medium text-sm transition-colors duration-200";
        string activeClasses = "text-blue-600 dark:text-blue-400 border-b-2 border-blue-600 dark:border-blue-400 bg-blue-50/50 dark:bg-blue-900/20";
        string inactiveClasses = "text-gray-500 dark:text-gray-400 hover:text-gray-700 dark:hover:text-gray-300 hover:bg-gray-50 dark:hover:bg-gray-700/50";

        return baseClasses + " " + (activeTab == tabName ? activeClasses : inactiveClasses);
    }

    private void SetActiveTab(string tab)
    {
        activeTab = tab;
    }
}