@page "/not-found"
@layout MainLayout

<div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-blue-50 via-white to-purple-50 dark:from-gray-900 dark:via-gray-800 dark:to-purple-900/20 px-4">
    <div class="max-w-md w-full text-center">
        <!-- 404 Illustration -->
        <div class="mb-8">
            <div class="relative">
                <div class="w-32 h-32 mx-auto mb-4 bg-gradient-to-br from-blue-400 to-purple-600 rounded-full flex items-center justify-center shadow-2xl">
                    <svg class="w-16 h-16 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.172 16.172a4 4 0 015.656 0M9 12h6m-6-4h6m2 5.291A7.962 7.962 0 0112 15c-2.34 0-4.29-.98-5.625-2.51M12 2a10 10 0 110 20 10 10 0 010-20z"></path>
                    </svg>
                </div>
                <div class="absolute -top-2 -right-2 w-8 h-8 bg-red-500 rounded-full flex items-center justify-center">
                    <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                    </svg>
                </div>
            </div>
        </div>

        <!-- 404 Text -->
        <h1 class="text-6xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-blue-600 to-purple-600 mb-4">
            404
        </h1>

        <!-- Title -->
        <h2 class="text-2xl font-semibold text-gray-900 dark:text-white mb-4">
            Page Not Found
        </h2>

        <!-- Description -->
        <p class="text-gray-600 dark:text-gray-300 mb-8 leading-relaxed">
            Oops! The page you're looking for seems to have wandered off. Don't worry, it happens to the best of us.
        </p>

        <!-- Actions -->
        <div class="space-y-4">
            <a href="/" class="inline-flex items-center px-6 py-3 bg-gradient-to-r from-blue-500 to-purple-600 text-white font-medium rounded-xl shadow-lg hover:shadow-xl transform hover:scale-105 transition-all duration-200">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
                </svg>
                Go Home
            </a>

            <button @onclick="GoBack" class="inline-flex items-center px-6 py-3 bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300 font-medium rounded-xl hover:bg-gray-200 dark:hover:bg-gray-600 transition-colors duration-200">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                </svg>
                Go Back
            </button>
        </div>

        <!-- Fun Element -->
        <div class="mt-12 text-sm text-gray-500 dark:text-gray-400">
            <p>While you're here, why not explore our amazing features?</p>
        </div>
    </div>
</div>

@inject NavigationManager NavigationManager

@code {
    private void GoBack()
    {
        NavigationManager.NavigateTo(NavigationManager.Uri);
        // This will go back in history, but since it's not found, perhaps navigate to home
        // For simplicity, navigate to home
        NavigationManager.NavigateTo("/");
    }
}