<a href="@Href" class="group flex transform @(IsCollapsed ? "justify-center px-3" : "space-x-4 px-4") items-center rounded-2xl py-3 @(IsSelected ? SelectedClasses : "text-gray-700 dark:text-gray-300") transition-all duration-300 hover:scale-105 @HoverClasses hover:shadow-lg">
    <div class="@(IsCollapsed ? "" : "w-10 h-10") flex items-center justify-center rounded-xl @(IsSelected ? IconBgSelected : IconBgNormal) transition-all duration-300">
        <svg class="h-6 w-6 @(IsSelected ? IconColorSelected : IconColorNormal)" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            @((MarkupString)IconPath)
        </svg>
    </div>
    @if (!IsCollapsed)
    {
        <div class="flex-1">
            <span class="font-medium">@Title</span>
            <p class="text-xs opacity-70">@Subtitle</p>
        </div>
    }
</a>

@code {
    [Parameter] public string Href { get; set; } = "/";
    [Parameter] public string IconPath { get; set; } = "";
    [Parameter] public string Title { get; set; } = "";
    [Parameter] public string Subtitle { get; set; } = "";
    [Parameter] public bool IsSelected { get; set; }
    [Parameter] public bool IsCollapsed { get; set; }
    [Parameter] public string SelectedClasses { get; set; } = "bg-gradient-to-r from-blue-500 to-purple-600 text-white shadow-lg";
    [Parameter] public string HoverClasses { get; set; } = "hover:bg-gradient-to-r hover:from-blue-500 hover:to-purple-600 hover:text-white";
    [Parameter] public string IconBgSelected { get; set; } = "bg-white/20";
    [Parameter] public string IconBgNormal { get; set; } = "bg-blue-100 dark:bg-blue-900/30 group-hover:bg-white/20";
    [Parameter] public string IconColorSelected { get; set; } = "text-white";
    [Parameter] public string IconColorNormal { get; set; } = "text-blue-600 group-hover:text-white";
}