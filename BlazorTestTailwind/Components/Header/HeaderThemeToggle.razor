<button @onclick="ToggleTheme" class="transform rounded-xl p-2 transition-all duration-300 hover:scale-110 hover:bg-white/20" title="Toggle theme">
    @if (ThemeService.IsDarkMode)
    {
        <svg class="h-6 w-6 cursor-pointer text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-0.707-0.707M6.343 6.343l-0.707-0.707m12.728 0l-0.707 0.707M6.343 17.657l-0.707 0.707M16 12a4 4 0 11-8 0 4 4 0 018 0z"></path>
        </svg>
    }
    else
    {
        <svg class="h-6 w-6 cursor-pointer text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z"></path>
        </svg>
    }
</button>

@using BlazorTestTailwind.Services
@inject ThemeService ThemeService

@code {
    private async Task ToggleTheme()
    {
        try
        {
            await ThemeService.ToggleThemeAsync();
        }
        catch { }
    }
}