@inject ToastService ToastService
@inject SweetAlertService SweetAlertService

<div class="p-6 bg-white dark:bg-gray-800 rounded-lg shadow-lg">
    <h3 class="text-xl font-bold mb-4 text-gray-900 dark:text-white">Notification Demo</h3>
    
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <!-- Toast Notifications -->
        <div class="space-y-3">
            <h4 class="font-semibold text-gray-700 dark:text-gray-300">Toast Notifications</h4>
            <button @onclick="ShowSuccessToast" class="w-full px-4 py-2 bg-green-500 text-white rounded hover:bg-green-600">
                Success Toast
            </button>
            <button @onclick="ShowErrorToast" class="w-full px-4 py-2 bg-red-500 text-white rounded hover:bg-red-600">
                Error Toast
            </button>
            <button @onclick="ShowWarningToast" class="w-full px-4 py-2 bg-yellow-500 text-white rounded hover:bg-yellow-600">
                Warning Toast
            </button>
            <button @onclick="ShowInfoToast" class="w-full px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-600">
                Info Toast
            </button>
        </div>

        <!-- SweetAlert Dialogs -->
        <div class="space-y-3">
            <h4 class="font-semibold text-gray-700 dark:text-gray-300">SweetAlert Dialogs</h4>
            <button @onclick="ShowConfirmDialog" class="w-full px-4 py-2 bg-purple-500 text-white rounded hover:bg-purple-600">
                Confirm Dialog
            </button>
            <button @onclick="ShowSuccessAlert" class="w-full px-4 py-2 bg-green-500 text-white rounded hover:bg-green-600">
                Success Alert
            </button>
            <button @onclick="ShowErrorAlert" class="w-full px-4 py-2 bg-red-500 text-white rounded hover:bg-red-600">
                Error Alert
            </button>
            <button @onclick="ShowInputDialog" class="w-full px-4 py-2 bg-indigo-500 text-white rounded hover:bg-indigo-600">
                Input Dialog
            </button>
        </div>
    </div>
</div>

@code {
    private async Task ShowSuccessToast()
    {
        await ToastService.ShowSuccess("Operation completed successfully!");
    }

    private async Task ShowErrorToast()
    {
        await ToastService.ShowError("An error occurred while processing your request.");
    }

    private async Task ShowWarningToast()
    {
        await ToastService.ShowWarning("Please check your input data.");
    }

    private async Task ShowInfoToast()
    {
        await ToastService.ShowInfo("Here's some useful information for you.");
    }

    private async Task ShowConfirmDialog()
    {
        var result = await SweetAlertService.ShowConfirm(
            "Are you sure?", 
            "This action cannot be undone!", 
            "Yes, delete it!", 
            "Cancel"
        );
        
        if (result)
        {
            await ToastService.ShowSuccess("Item deleted successfully!");
        }
    }

    private async Task ShowSuccessAlert()
    {
        await SweetAlertService.ShowSuccess("Success!", "Your operation was completed successfully.");
    }

    private async Task ShowErrorAlert()
    {
        await SweetAlertService.ShowError("Error!", "Something went wrong. Please try again.");
    }

    private async Task ShowInputDialog()
    {
        var result = await SweetAlertService.ShowInput("Enter your name", "Your name here...");
        
        if (!string.IsNullOrEmpty(result))
        {
            await ToastService.ShowInfo($"Hello, {result}!");
        }
    }
}