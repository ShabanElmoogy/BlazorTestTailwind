@using BlazorTestTailwind.Components.Header

<!-- Modern App Bar -->
<header class="sticky top-0 z-50 bg-gradient-to-r from-blue-600 via-purple-600 to-indigo-600 shadow-xl backdrop-blur-lg dark:from-gray-800 dark:via-gray-900 dark:to-black">
    <div class="flex items-center justify-between px-6 py-4">
        <!-- Start: Menu Button & Logo (logical start) -->
        <HeaderLogo OnSidebarToggle="OnSidebarToggle" />

        <!-- End: Actions (logical end) -->
        <div class="flex items-center gap-3">
            <HeaderSearch />
            <HeaderNotifications />
            <HeaderThemeToggle />
            <HeaderDirectionToggle />
            <HeaderProfileDropdown @ref="profileDropdownRef" />
        </div>
    </div>
</header>

@code {
    [Parameter] public EventCallback OnSidebarToggle { get; set; }
    private HeaderProfileDropdown? profileDropdownRef;

    public void CloseProfile()
    {
        profileDropdownRef?.CloseProfile();
    }
}