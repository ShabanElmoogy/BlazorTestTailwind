<SidebarFloatingButton IsCollapsed="IsCollapsed" />

@code {
    [Parameter] public bool IsCollapsed { get; set; }
    [Parameter] public EventCallback<bool> OnCollapseToggle { get; set; }
    
    private HashSet<int> openMenus = new();
    private HashSet<int> openSubMenus = new();

    private void ToggleSubmenu(int menuIndex)
    {
        if (openMenus.Contains(menuIndex))
            openMenus.Remove(menuIndex);
        else
            openMenus.Add(menuIndex);
    }

    private void ToggleSubSubmenu(int subMenuIndex)
    {
        if (openSubMenus.Contains(subMenuIndex))
            openSubMenus.Remove(subMenuIndex);
        else
            openSubMenus.Add(subMenuIndex);
    }

    private async Task HandleCollapseToggle()
    {
        await OnCollapseToggle.InvokeAsync(!IsCollapsed);
    }

    protected override void OnInitialized()
    {
        NavigationManager.LocationChanged += OnLocationChanged;
    }

    private void OnLocationChanged(object? sender, Microsoft.AspNetCore.Components.Routing.LocationChangedEventArgs e)
    {
        StateHasChanged();
    }

    public void Dispose()
    {
        NavigationManager.LocationChanged -= OnLocationChanged;
    }

    private bool IsCurrentPage(string path)
    {
        var currentPath = "/" + NavigationManager.ToBaseRelativePath(NavigationManager.Uri).TrimEnd('/');
        if (currentPath == "/") currentPath = "/";
        return currentPath.Equals(path.TrimEnd('/'), StringComparison.OrdinalIgnoreCase);
    }
}